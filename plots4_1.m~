function [ ] = plots4_1( )
% Make plots for problem 4.1
m = 200;
n = 200;
[Q,X,Y,Tax] = eulerImpl(m,n,0.05,10,'dirac');
figure(1)
for i=2:10
    subplot(3,3,i-1)
    %x = 0:1/m:(1-1/m)+1/(2*m);
    %y = 0:1/n:(1-1/n)+1/(2*n);
    %[X, Y] = meshgrid(x,y);
    mesh(X,Y,Q(:,:,i))
    time = 0.05*(i-1);
    title(sprintf('Dirac Source, T = %g', Tax(i)))
    xlabel('x')
    ylabel('y')
    zlabel('Q')
end

[Q,X,Y,Tax] = eulerImpl(m,n,0.05,10,'other');
figure(2)
for i=2:10
    subplot(3,3,i-1)
    %x = 0:1/m:(1-1/m)+1/(2*m);
    %y = 0:1/n:(1-1/n)+1/(2*n);
    %[X, Y] = meshgrid(x,y);
    mesh(X,Y,Q(:,:,i))
    title(sprintf('Smooth Source, T = %g', Tax(i)))
    xlabel('x')
    ylabel('y')
    zlabel('Q')
end
end

